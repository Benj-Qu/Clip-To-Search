{
  "name": "Clip to Search",
  "description": "A chrome extention that enable users to search by the underlying html codes",
  "version": "1.0.1",
  "manifest_version": 3,

  "permissions": [ "https://*/*", "http://*/*", "https://www.google-analytics.com/", "downloads", "contextMenus", "tabs", "storage", "unlimitedStorage", "activeTab", "\u003Call_urls>", "background", "chrome://favicon/", "clipboardRead", "clipboardWrite" ],
  
  "default_locale": "en",

  "content_scripts":[
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["searchStyle.css", "rectangle.css"],
      "js": ["jquery.js", "rectangle.js", "functions.js"]
    }
  ],

  "background":{
    "service_worker": "background.js"
  },

  "commands": {
    "switch": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Switch on and off the extension."
    },
    "delete":{
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Delete the last element in the object queue."
    },
    "clear": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Clear current search result."
    }
    
  }
}
