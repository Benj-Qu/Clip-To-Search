{
  "name": "Clip to Search",
  "description": "A chrome extention that enable users to search by the underlying html codes",
  "version": "1.0.1",
  "manifest_version": 3,

  "permissions": [ "https://*/*", "http://*/*", "https://www.google-analytics.com/", "downloads", "contextMenus", "tabs", "storage", "unlimitedStorage", "activeTab", "\u003Call_urls>", "background", "chrome://favicon/", "clipboardRead", "clipboardWrite" ],
  
  "default_locale": "en",

  "content_scripts":[
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["searchStyle.css", "rectangle.css"],
      "js": ["jquery.js", "rectangle.js", "functions.js"]
    }
  ],

  "background":{
    "service_worker": "background.js"
  },

  "commands": {
    "activate": {
      "suggested_key": {
        "default": "Ctrl+A",
        "mac": "Command+A"
      },
      "description": "Activate the extension"
    }
  }


}
